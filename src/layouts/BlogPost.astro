---
import type { CollectionEntry } from "astro:content";
import BaseHead from "../components/BaseHead.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import FormattedDate from "../components/FormattedDate.astro";

type Props = CollectionEntry<"blog">["data"];

const { draft, title, description, pubDate, updatedDate } = Astro.props;
---

<html lang="en">
  <head>
    <BaseHead title={title} description={description} />
  </head>
  <body>
    <Header />
    <main class="mt-25">
      <button
        class:list={[
          "flex items-center text-base mb-4",
          "hover:text-accent transition-colors",
        ]}
        onclick="history.back()"
      >
        <div class="i-bi-chevron-left mr-1" />
        Go Back
      </button>
      <article>
        <div class="mb-6">
          <h1 class="my-0 mb-2 text-3xl">{title}</h1>
          <div class="date flex items-center text-base">
            <div class="i-bi-calendar3 mr-2" />
            <span class="italic">
              <FormattedDate date={pubDate} />
              {
                updatedDate && (
                  <span>
                    {" | Updated"}
                    <FormattedDate date={updatedDate} />
                  </span>
                )
              }
            </span>
          </div>
          {draft && <div class="text-3xl text-red">(DRAFT)</div>}
        </div>
        <div class="prose">
          <slot />
        </div>
      </article>
    </main>
    <Footer />
  </body>
</html>
