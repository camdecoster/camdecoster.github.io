---
import { EMAIL, SOCIAL_LINKS } from "../consts";
import Hr from "./Hr.astro";

const currentYear = new Date().getFullYear();
---

<footer class="mx-auto">
  <div class="mx-2 sm:mx-0">
    <Hr />
    <div
      class:list={[
        "mt-3 flex flex-col justify-center",
        "sm:flex-row sm:items-center sm:justify-between",
      ]}
    >
      <div class="text-center">&#169; {currentYear} Cameron DeCoster</div>
      <div class="mt-2 sm:mt-0 flex items-center justify-center text-3xl">
        {
          SOCIAL_LINKS.map(l => (
            <a href={l.href} target="_blank" rel="me">
              <div
                class:list={[
                  "mr-3 text-white hover:text-accent transition-all",
                  l.icon,
                ]}
              />
            </a>
          ))
        }
        <a href=`mailto:${EMAIL}?subject=Hello%20from%20your%20Devblog&body=Hello%20Cam!` target="_blank">
          <div
            class="text-white hover:text-accent transition-all i-bi-envelope-fill"
          />
        </a>
      </div>
    </div>
  </div>
</footer>

<style>
  footer {
    max-width: 48rem;
    padding: 2em 0;
  }
</style>
