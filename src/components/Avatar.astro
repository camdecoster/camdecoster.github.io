---
import { Image } from "astro:assets";
import avatar from "../assets/images/avatar.jpg";
import avatarZoomed from "../assets/images/avatar_zoomed.jpg";

interface Props {
  class?: string;
  width: number;
  zoomed?: boolean;
}
const { class: className, width, zoomed } = Astro.props;
const image = zoomed ? avatarZoomed : avatar;
---

<Image
  alt="image of cameron decoster"
  class:list={["rounded-full", className]}
  src={image}
  width={width}
/>
